<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Paul Miyamoto — Portfolio</title>
    <!-- Site CSS (compiled from site.css.scss) -->
    <link rel="stylesheet" href="/stylesheets/site.css">
    <!-- Google Fonts: Inter (body) + Raleway (headings) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Raleway:wght@600;700&display=swap" rel="stylesheet">
    <!-- Swiper CSS (carousel) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">
  </head>
  <body>
    <%= yield %>
    <footer class="footer">
      <div class="container">
        <span>© <span id="year"></span> Paul Miyamoto</span>
      </div>
    </footer>
    <script>
      document.getElementById('year').textContent = new Date().getFullYear();
    </script>
    <!-- Swiper JS (carousel) -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Initialize a shots-swiper per project card
        document.querySelectorAll('.shots-swiper').forEach((el) => {
          new Swiper(el, {
            loop: false,
            speed: 400,
            spaceBetween: 10,
            slidesPerView: 1,
            breakpoints: {
              640:  { slidesPerView: 1 },
              960:  { slidesPerView: 2 },   // show 2 tall mobile screenshots side-by-side
              1400: { slidesPerView: 2 }
            },
            pagination: {
              el: el.parentElement.querySelector('.shots-pag'),
              clickable: true
            }
          });
        });
      });
    </script>
  </body>
</html>
